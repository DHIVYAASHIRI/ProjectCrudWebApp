@page
@model ProjectCrudWebApp.Pages.Patients.ListModel
@{
}
<form method="post" class="shadow">
    <div class="row">
        <div class="col-sm-10"><h3>Patients</h3></div>
       
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
    </div>
    <br />

<table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">DOB</th>
                <th scope="col">Gender</th>
                <th scope="col">MobileNumber</th>
                <th scope="col">Address</th>
                <th scope="col">email</th>
                <th scope="col">Password</th>
                
 </tr>
        </thead>
        <tbody>
            @if(Model.Patients==null && Model.Patients.Count <= 0)
            {
                <div>No Patients found</div>
            }
            @foreach (var d in Model.Patients)
            {
                <tr>
                    <td>@d.Id</td>
                      <td>@d.Name</td>
                      <td>@d.DOB.ToString("dd-MMM-yyyy")</td>
                      <td>@d.Gender</td>
                      <td>@d.MobileNumber</td>
                       <td>@d.Address</td>
                    <td>@d.email</td>
                    <td>@d.Password</td>
                   
                    
                </tr>
            }
        </tbody>
    </table>
</form>

