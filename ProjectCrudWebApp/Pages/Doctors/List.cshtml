@page
@model ProjectCrudWebApp.Pages.Doctors.ListModel
@{
}
<form method="post" class="shadow">
    <div class="row">
        <div class="col-sm-10"><h3>Doctors</h3></div>
        <div class="col-sm-2">
            <a href="/Doctors/Add" class="btn btn-success rounded-pill" role="button">
                <i class="fa fa-add"></i>
                Add New Doctor
            </a>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-12 mx-auto"> <h6> Search Something...</h6>
            <div class="input-group"> 
                <input class="form-control border rounded-pill"
                       type="search" placeholder="Type Here To Search" id="example-search-input"
                       asp-for="@Model.SearchText">
                <span class="input-group-append"> 
                    <button class="btn btn-outline-primary bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Search">
                        <i class="fa fa-search"></i>
                    </button>
                    <button class="btn btn-outline-dark bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Clear">
                        <i class="fa fa-remove"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
 
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h5 class="text-danger">@Html.ValidationSummary()</h5>
    </div>
    <br />


    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">DoctorName</th>
                <th scope="col">Gender</th>
                <th scope="col">MobileNumber</th>
                <th scope="col">Specialization</th>
                <th scope="col">AvailableDays</th>
                <th scope="col">AvailableTime</th>
                <th scope = "col">Actions</th>
           </tr>
        </thead>
        <tbody>
            @if(Model.Doctors==null && Model.Doctors.Count <= 0)
            {
                <div>No Doctors found</div>
            }
            @foreach (var d in Model.Doctors)
            {
                <tr>
                    <td>@d.Id</td>
                      <td>@d.DoctorName</td>
                      <td>@d.Gender</td>
                      <td>@d.MobileNumber</td>
                       <td>@d.Specialization</td>
                    <td>@d.AvailableDays</td>
                    <td>@d.AvailableTime</td>
                   
                    <td>
                        <a href="/Doctors/Edit/@d.Id" class="btn btn-outline-warning" role="button">
                            <i class="fa fa-edit">Update</i>
                        </a>
                        <a href="/Doctors/Delete/@d.Id" class="btn btn-outline-danger" role="button">
                            <i class="fa fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>