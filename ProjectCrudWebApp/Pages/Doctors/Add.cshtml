@page
@model ProjectCrudWebApp.Pages.Doctors.AddModel
@{
}
<h3>Add New Doctor </h3>
<form method="post">

    <div class="form-group">
        <label asp-for="@Model.DoctorName"></label>
        <input asp-for="@Model.DoctorName" class="form-control" />
    </div>
    <div class="form-group">
       <label >Select the gender</label>
       <div class="form-check">
       @foreach(var g in @Model.Genders)
        {
            <input type="radio"  asp-for="@Model.Gender" value="@g"/>
           
       @g <br />
        }
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.MobileNumber"></label>
        <input asp-for="@Model.MobileNumber" class="form-control" />
    </div>
    <div class="form-group">
 
    <label class="form-label" asp-for="@Model.Specialization"> </label>
    <select  asp-for="@Model.Specialization" class="form-select" asp-items="@Model.Specializations"> </select>

    </div>
      <div class="form-group">
        <label asp-for="@Model.AvailableDays"></label>
        <input asp-for="@Model.AvailableDays" class="form-control" /> 
      <div class="form-group">

        <label asp-for="@Model.AvailableTime"></label>
        <input  asp-for="@Model.AvailableTime" class="form-control" />
    </div>
    <div class="form-group">
        <h5 class="text-success">@Model.SuccessMessage</h5>
        <h5 class="text-danger">@Model.ErrorMessage</h5>
        <h5 class="text-danger">@Html.ValidationSummary()</h5>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success ">SAVE</button>
        <a href="/Doctors/List" class="btn btn-light" role="button">CANCEL</a>
    </div>

</form>

